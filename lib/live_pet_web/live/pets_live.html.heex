<.header>
  Your Pets
  <:actions>
    <.link navigate={~p"/pets/new"}>
      <.button>New Pet</.button>
    </.link>
  </:actions>
</.header>

<.table id="pets" rows={@pets} row_click={fn pet -> JS.navigate(~p"/pet/#{pet}") end}>
  <:col :let={pet} label="Name">
    <%= pet.name %>
  </:col>
  <:col :let={pet} label="Birth Date">
    <%= Calendar.strftime(pet.inserted_at, "%x") %>
  </:col>
  <:col :let={pet} label="Status">
    <span class="text-4xl"><%= if pet.is_alive, do: "🆗", else: "☠️" %></span>
  </:col>
  <:col :let={pet}>
    <img class="w-16" src={pet.image} />
  </:col>
</.table>
